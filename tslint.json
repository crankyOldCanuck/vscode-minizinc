{
    "extends": [
        "tslint:recommended"
    ],
	"rules": {
        "no-irregular-whitespace": true,
        "no-string-throw": true,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": [
			true,
			"always"
		],
        "triple-equals": true,
        "object-literal-sort-keys": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "no-empty": false
	},
	"defaultSeverity": "warning"
}
